<%- include('partials/header'); %> 

<div id="blogs">
    <div style="padding: 10px;">
        <div id="blog-heading">
            <h1>Blogs on BlogMore</h1>
        </div>
        <div id="blog-content">
            <% blogPosts.forEach(function(post) { %>
                <% post.blogs.forEach(function(blog) {%>
                    <div class="blog-item"> 
                        <div class="py-2 px-4" style="box-shadow: -10px 3px 9px #142F43;">
                            <h3 style="color: #f2f2f2;" class="text-lg-start text-md-start text-sm-center"><%= blog.blogtitle %></h3>
                            <p style="color: #a6a6a6;" class="text-lg-start text-md-start"><%= blog.blogbody.substring(0, 150) + " ..." %> <br><a href="/posts/<%=blog.blogtitle.trim()%>">Read More</a></p> 
                        </div>
                    </div>
                <% }); %> 
            <% }); %>
        </div>
    </div>
</div>
<%- include("./partials/footer"); -%>
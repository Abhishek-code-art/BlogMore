<%- include('./partials/header'); -%>

<!-- Features section -->
<section id="features">
    <div class="text-white parent-work-image">
        <div  class="features-card-box d-flex flex-row">
            <div class="align-self-start" style="width: 50%;" id="feature-item">
                <h1 class="card-title pt-2">Welcome To BlogMore</h3>
                <div class="image-card-box"><p class="card-text">Are you able to inspire an audience? If yes, so you are on the right platform!Signup on BlogMore and start creating beautiful blogs that inspire millions of people.</p></div>
                <div style="padding-left: 1.2rem;" id="features-btn-div">
                <button class="btn custom-btn-style ms-2 btn-outline-light" onclick="location.href='/compose'">Create your blog</button></div> 
            </div>

            <div class="align-self-end" style="width: 50%;" id="card-3-image">
                <img src="./images/card-4.jpg" alt="blog image" style="max-width: 100%; height: 320px;">
            </div>
        </div>
    </div>
</section>

<!-- Blog Post section-->

<div id="blog-post" style="margin: 40px 40px 30px; padding: 15px">
    <h3 class="text-lg-start text-md-center text-sm-center ms-lg-5 ms-md-5 ms-xs-2" style="font-size: 2.2rem; font-weight: 700;">Blogs on BlogMore</h3>
        <% blogPosts.forEach(function(post) { %>
            <% post.blogs.forEach(function(blog) {%>
                <div class="blog-item"> 
                    <div class="py-2 px-4" style="box-shadow: -10px 3px 9px #142F43;">
                        <h3 style="color: #f2f2f2;" class="text-lg-start text-md-center text-sm-center"><%= blog.blogtitle %></h3>
                        <p id="blog-message" class="text-lg-start text-md-center text-sm-center"><%= blog.blogbody.substring(0, 150) + " ..." %> <br><a href="/posts/<%=blog.blogtitle.trim()%>">Read More</a></p>
                    </div>
                </div>
            <% }); %> 
        <% }); %>
</div>
<!-- footer -->
<%- include("./partials/footer"); -%>
